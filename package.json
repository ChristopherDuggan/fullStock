  "bugs": {
    "url": "https://github.com/ChristopherDuggan/fullStock/issues"
  },
  "homepage": "https://github.com/ChristopherDuggan/fullStock#readme",
  "dependencies": {
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.18.2",
    "morgan": "^1.9.1",
    "pg": "^7.18.2",
    "sequelize": "^5.21.5"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.18.3",
    "nodemon": "^2.0.2"
  }
